{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc" , "c++" , "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
              "index": {
                      "onChange": true
              },
          "highlight": { "lsRanges" : true },
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    }
  }
}
