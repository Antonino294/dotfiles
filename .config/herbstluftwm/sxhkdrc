## clight

# adjust ambient

super + alt + l
	busctl --user call org.clight.clight /org/clight/clight org.clight.clight Capture "bb" false false && notify-send -t 1750 "Adjusting Backlight..."

super + alt + P
	busctl --user call org.clight.clight /org/clight/clight org.clight.clight Inhibit "b" true && notify-send -t 3000 "Dimmer" "OFF"

super + alt + p
	busctl --user call org.clight.clight /org/clight/clight org.clight.clight Inhibit "b" false && notify-send -t 3000 "Dimmer" "ON"

super + alt + B
	busctl --user set-property org.clight.clight /org/clight/clight/Conf/Backlight org.clight.clight.Conf.Backlight NoAutoCalib "b" true  && notify-send -t 3000 "Backlight Calibration" "Off"

super + alt + b
	busctl --user set-property org.clight.clight /org/clight/clight/Conf/Backlight org.clight.clight.Conf.Backlight NoAutoCalib "b" false && notify-send -t 3000 "Backlight Calibration" "On"


# control brightness

XF86MonBrightnessUp
	busctl --user call org.clight.clight /org/clight/clight org.clight.clight IncBl d 0.05
	#brightnessctl set 5%+
	#brightlight -i 30

XF86MonBrightnessDown
	busctl --user call org.clight.clight /org/clight/clight org.clight.clight DecBl d 0.05
	#brightnessctl set 5%-
	#brightlight -d 30

